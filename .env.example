# GreenAI Environment Configuration Template
# Copy this file to .env and fill in your values

# ====================
# DATABASE (Required)
# ====================
# Supabase Postgres connection string
DATABASE_URL=postgresql://postgres.[your-project-ref]:[your-password]@aws-1-ap-northeast-1.pooler.supabase.com:6543/postgres

# ====================
# AUTHENTICATION (Required)
# ====================
# JWT configuration
JWT_SECRET_KEY=your-32-char-minimum-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ====================
# SUPABASE (Required)
# ====================
SUPABASE_URL=https://[your-project-ref].supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# ====================
# REDIS (Optional)
# ====================
REDIS_URL=redis://localhost:6379/0

# ====================
# APPLICATION
# ====================
ENVIRONMENT=development

# ====================
# FRONTEND (Required)
# ====================
NEXT_PUBLIC_API_BASE=http://localhost:8001/api
# For production: NEXT_PUBLIC_API_BASE=https://your-domain.com/api

# ====================
# STORAGE (Optional - for report exports)
# ====================
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_BUCKET=greenai-reports
